<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="home"
            type="ir.bppir.pishtazan.viewmodels.VM_Home" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/linearLayoutCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dw_test">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_16sdp"
                    android:text="@string/customers"
                    fontPath="font/vazir_bold.ttf"
                    android:background="@drawable/dw_back_home_menu" />

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:tint="@color/colorPrimaryDark"
                android:src="@drawable/ic_group"
                android:padding="@dimen/_12sdp"
                android:background="@drawable/dw_back_circle_accent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutColleagues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutCustomer">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dw_test">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_17sdp"
                    android:text="@string/colleagues"
                    fontPath="font/vazir_bold.ttf"
                    android:background="@drawable/dw_back_home_menu" />

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:tint="@color/colorPrimaryDark"
                android:src="@drawable/ic_hierarchy"
                android:padding="@dimen/_12sdp"
                android:background="@drawable/dw_back_circle_accent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutTutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutColleagues">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dw_test">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_17sdp"
                    android:text="@string/tutorial"
                    fontPath="font/vazir_bold.ttf"
                    android:background="@drawable/dw_back_home_menu" />

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:tint="@color/colorPrimaryDark"
                android:src="@drawable/ic_educational_video"
                android:padding="@dimen/_12sdp"
                android:background="@drawable/dw_back_circle_accent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutReports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutTutorial">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dw_test">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_17sdp"
                    android:text="@string/reports"
                    fontPath="font/vazir_bold.ttf"
                    android:background="@drawable/dw_back_home_menu" />

            </LinearLayout>


            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:tint="@color/colorPrimaryDark"
                android:src="@drawable/ic_statistics"
                android:padding="@dimen/_12sdp"
                android:background="@drawable/dw_back_circle_accent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutAlarms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutReports">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dw_test">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_17sdp"
                    android:text="@string/alarms"
                    fontPath="font/vazir_bold.ttf"
                    android:background="@drawable/dw_back_home_menu" />

            </LinearLayout>


            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:tint="@color/colorPrimaryDark"
                android:src="@drawable/ic_bell"
                android:padding="@dimen/_12sdp"
                android:background="@drawable/dw_back_circle_accent" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
